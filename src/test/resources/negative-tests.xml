<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Negative Test Suite" parallel="methods" thread-count="3" verbose="1">
    
    <listeners>
        <listener class-name="com.amazon.automation.tests.listeners.ExtentTestListener"/>
    </listeners>
    
    <test name="Negative Tests">
        <groups>
            <run>
                <include name="negative"/>
            </run>
        </groups>
        <packages>
            <package name="com.amazon.automation.tests.*"/>
        </packages>
    </test>
    
</suite>