<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Search and Cart Suite" parallel="tests" thread-count="2" verbose="1">
    
    <listeners>
        <listener class-name="com.amazon.automation.tests.listeners.ExtentTestListener"/>
    </listeners>
    
    <test name="Search and Cart Tests">
        <groups>
            <run>
                <include name="search"/>
                <include name="cart"/>
            </run>
        </groups>
        <packages>
            <package name="com.amazon.automation.tests.*"/>
        </packages>
    </test>
    
</suite>